{
  "$ref": "#/definitions/blog",
  "definitions": {
    "blog": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": [
            "blog",
            "project"
          ]
        },
        "date": {
          "type": "string",
          "pattern": "^\\d{4}$|^\\d{2}-\\d{2}-\\d{2}$"
        },
        "covers": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "academic",
              "personal",
              "work",
              "featured",
              "hidden",
              "ongoing"
            ]
          }
        },
        "description": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "type",
        "date",
        "covers",
        "tags"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}