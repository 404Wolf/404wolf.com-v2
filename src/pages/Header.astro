---
import Typewriter from "typewriter-effect";
import Tile from "../components/Tile.astro";
---

<div class="relative px-1 text-white bg-slate-600 overflow-hidden rounded-xl">
  <div class="text-transparent cursor-none absolute top-0 left-0">
    {" "}
    Hi! I'm Wolf Mermelstein{" "}
  </div>

  <div class="absolute left-0">
    <Typewriter
      onInit={(typewriter) => {
        typewriter
          .typeString("Hi! ")
          .pauseFor(700)
          .typeString("I'm Wolf Mermelstein")
          .start();
      }}
      options={{ delay: 70, cursor: "", autoStart: true }}
    />
  </div>

  <Tile>
  </Tile>
</div>
